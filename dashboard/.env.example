# REDAXO Multi-Instance Dashboard - Konfiguration

# Server-Einstellungen
PORT=3000
NODE_ENV=development
HOST=localhost

# Dashboard-Features
ENABLE_SCREENSHOTS=true
ENABLE_VSCODE_INTEGRATION=true
ENABLE_REALTIME_UPDATES=true

# Screenshot-Konfiguration
SCREENSHOT_DIR=public/screenshots
SCREENSHOT_QUALITY=90
SCREENSHOT_TIMEOUT=10000
SCREENSHOT_WIDTH=1200
SCREENSHOT_HEIGHT=800

# Puppeteer-Konfiguration
PUPPETEER_HEADLESS=true
PUPPETEER_TIMEOUT=30000
PUPPETEER_ARGS=--no-sandbox,--disable-setuid-sandbox

# Docker-Konfiguration
DOCKER_NETWORK=redaxo-network
DOCKER_HOST=unix:///var/run/docker.sock

# REDAXO-Standard-Konfiguration
DEFAULT_PHP_VERSION=8.4
DEFAULT_MARIADB_VERSION=latest
DEFAULT_START_PORT=8080

# Logging
LOG_LEVEL=info
LOG_FILE=dashboard.log

# Auto-Cleanup (in Minuten)
CLEANUP_SCREENSHOTS_OLDER_THAN=10080  # 7 Tage
CLEANUP_LOGS_OLDER_THAN=4320         # 3 Tage

# Socket.IO Konfiguration
SOCKET_IO_TRANSPORTS=websocket,polling
SOCKET_IO_PING_TIMEOUT=60000
SOCKET_IO_PING_INTERVAL=25000
