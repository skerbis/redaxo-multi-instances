#!/bin/bash

# REDAXO Dashboard Starter
# Einfacher Weg, das Dashboard zu starten

# Farben
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
BLUE='\033[0;34m'
NC='\033[0m'

DASHBOARD_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd)/dashboard"
DASHBOARD_URL="http://localhost:3000"

echo -e "${GREEN}ğŸš€ REDAXO Multi-Instance Dashboard${NC}"
echo -e "${BLUE}âœ¨ Morphing Glass Design mit Font Awesome Icons${NC}"
echo ""

# PrÃ¼fe ob Node.js installiert ist
if ! command -v node &> /dev/null; then
    echo -e "${RED}âŒ Node.js ist nicht installiert${NC}"
    echo -e "${YELLOW}ğŸ’¡ Installieren Sie Node.js: https://nodejs.org/${NC}"
    exit 1
fi

# PrÃ¼fe ob npm installiert ist
if ! command -v npm &> /dev/null; then
    echo -e "${RED}âŒ npm ist nicht installiert${NC}"
    echo -e "${YELLOW}ğŸ’¡ npm wird normalerweise mit Node.js mitgeliefert${NC}"
    exit 1
fi

# Wechsle in Dashboard-Verzeichnis
cd "$DASHBOARD_DIR"

# PrÃ¼fe ob node_modules existiert
if [ ! -d "node_modules" ]; then
    echo -e "${YELLOW}ğŸ“¦ Installiere AbhÃ¤ngigkeiten...${NC}"
    npm install
    
    if [ $? -ne 0 ]; then
        echo -e "${RED}âŒ Fehler beim Installieren der AbhÃ¤ngigkeiten${NC}"
        exit 1
    fi
    echo -e "${GREEN}âœ… AbhÃ¤ngigkeiten installiert${NC}"
    echo ""
fi

# PrÃ¼fe ob Port 3000 verfÃ¼gbar ist
if lsof -Pi :3000 -sTCP:LISTEN -t >/dev/null 2>&1; then
    echo -e "${YELLOW}âš ï¸  Port 3000 ist bereits belegt${NC}"
    echo -e "${BLUE}ğŸ’¡ Das Dashboard lÃ¤uft mÃ¶glicherweise bereits: ${DASHBOARD_URL}${NC}"
    echo ""
    read -p "Trotzdem starten? (y/N): " -n 1 -r
    echo
    if [[ ! $REPLY =~ ^[Yy]$ ]]; then
        echo -e "${YELLOW}Abgebrochen${NC}"
        exit 0
    fi
fi

echo -e "${BLUE}ğŸ”„ Starte Dashboard...${NC}"
echo -e "${GREEN}ğŸ“± URL: ${DASHBOARD_URL}${NC}"
echo ""
echo -e "${YELLOW}ğŸ’¡ Tipp: DrÃ¼cken Sie Ctrl+C zum Beenden${NC}"
echo ""

# Starte das Dashboard
npm start
