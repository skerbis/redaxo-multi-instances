# REDAXO Multi-Instance System
# Globale Umgebungsvariablen

# System-Konfiguration
REDAXO_MULTI_VERSION=1.0.0
REDAXO_LOG_LEVEL=1

# Standard-Konfiguration für neue Instanzen
DEFAULT_TIMEZONE=Europe/Berlin
DEFAULT_LOCALE=de_DE
DEFAULT_CHARSET=UTF-8

# Docker-Konfiguration
DOCKER_NETWORK_PREFIX=redaxo
DOCKER_RESTART_POLICY=unless-stopped

# REDAXO-Repository (optional - überschreibt Standard-Repository)
# REDAXO_REPO=ihr-username/ihr-redaxo-setup

# SSL-Konfiguration
SSL_COUNTRY=DE
SSL_STATE=Germany
SSL_CITY=City
SSL_ORGANIZATION=REDAXO Development
SSL_VALIDITY_DAYS=365

# Backup-Konfiguration
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESS=true
BACKUP_INCLUDE_DB=true

# Performance-Einstellungen
PHP_MEMORY_LIMIT=256M
PHP_UPLOAD_MAX_FILESIZE=64M
PHP_POST_MAX_SIZE=64M
PHP_MAX_EXECUTION_TIME=300

# MariaDB-Performance
MYSQL_INNODB_BUFFER_POOL_SIZE=256M
MYSQL_QUERY_CACHE_SIZE=16M
