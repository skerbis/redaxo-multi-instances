#!/bin/bash

# REDAXO Dashboard mit PM2 (Persistent)

# Hilfe-Funktion
show_help() {
    echo "REDAXO Dashboard PM2 Manager"
    echo ""
    echo "Verwendung:"
    echo "  $0                 Dashboard starten"
    echo "  $0 --restart       Dashboard neustarten"
    echo "  $0 --delete        Dashboard stoppen und aus PM2 entfernen"
    echo "  $0 --uninstall     Dashboard entfernen und PM2 komplett deinstallieren"
    echo "  $0 --status        PM2 Status anzeigen"
    echo "  $0 --help          Diese Hilfe anzeigen"
    echo ""
}

# Parameter prÃ¼fen
case "$1" in
    --restart)
        echo "ðŸ”„ Dashboard wird neugestartet..."
        if command -v pm2 >/dev/null 2>&1; then
            pm2 restart redaxo-dashboard 2>/dev/null || {
                echo "âŒ Dashboard lÃ¤uft nicht oder ist nicht konfiguriert"
                echo "ðŸ’¡ Versuche: $0 (um es zu starten)"
                exit 1
            }
            echo "âœ… Dashboard wurde neugestartet"
            echo "ðŸ“Š PM2 Status:"
            pm2 status
        else
            echo "âŒ PM2 ist nicht installiert"
        fi
        exit 0
        ;;
    --delete)
        echo "ðŸ—‘ï¸  Dashboard wird aus PM2 entfernt..."
        if command -v pm2 >/dev/null 2>&1; then
            pm2 delete redaxo-dashboard 2>/dev/null || echo "Dashboard war bereits gestoppt"
            echo "âœ… Dashboard wurde aus PM2 entfernt"
            echo "ðŸ“Š Verbleibende PM2 Prozesse:"
            pm2 status
        else
            echo "âŒ PM2 ist nicht installiert"
        fi
        exit 0
        ;;
    --uninstall)
        echo "ðŸ—‘ï¸  Dashboard und PM2 werden komplett deinstalliert..."
        if command -v pm2 >/dev/null 2>&1; then
            pm2 delete redaxo-dashboard 2>/dev/null || true
            pm2 kill
            pm2 unstartup 2>/dev/null || true
            npm uninstall -g pm2
            echo "âœ… PM2 und Dashboard wurden komplett deinstalliert"
        else
            echo "âŒ PM2 ist bereits deinstalliert"
        fi
        exit 0
        ;;
    --status)
        if command -v pm2 >/dev/null 2>&1; then
            echo "ðŸ“Š PM2 Status:"
            pm2 status
        else
            echo "âŒ PM2 ist nicht installiert"
        fi
        exit 0
        ;;
    --help)
        show_help
        exit 0
        ;;
    "")
        # Standard-Verhalten: Dashboard starten
        ;;
    *)
        echo "âŒ Unbekannter Parameter: $1"
        show_help
        exit 1
        ;;
esac

cd "$(dirname "$0")/dashboard"

echo "ðŸš€ REDAXO Dashboard wird persistent gestartet (PM2)..."

# PrÃ¼fe ob PM2 installiert ist
if ! command -v pm2 >/dev/null 2>&1; then
    echo "ðŸ“¦ PM2 wird installiert..."
    npm install -g pm2
fi

# PrÃ¼fe ob Dependencies installiert sind
if [ ! -d "node_modules" ]; then
    echo "ðŸ“¦ AbhÃ¤ngigkeiten werden installiert..."
    npm install
fi

# PM2 Ecosystem-Datei erstellen falls nicht vorhanden
if [ ! -f "ecosystem.config.js" ]; then
    echo "âš™ï¸ PM2-Konfiguration wird erstellt..."
    cat > ecosystem.config.js << 'EOF'
module.exports = {
  apps: [{
    name: 'redaxo-dashboard',
    script: 'server.js',
    instances: 1,
    autorestart: true,
    watch: false,
    max_memory_restart: '1G',
    env: {
      NODE_ENV: 'production',
      PORT: 3000
    },
    error_file: './logs/err.log',
    out_file: './logs/out.log',
    log_file: './logs/combined.log',
    time: true
  }]
}
EOF
    
    # Logs-Verzeichnis erstellen
    mkdir -p logs
fi

# Dashboard mit PM2 starten
echo "ðŸ”„ Dashboard wird mit PM2 gestartet..."
pm2 start ecosystem.config.js

# PM2 Status anzeigen
echo ""
echo "ðŸ“Š PM2 Status:"
pm2 status

echo ""
echo "âœ… Dashboard lÃ¤uft persistent unter: http://localhost:3000"
echo ""
echo "ðŸ“‹ PM2 Befehle:"
echo "   â€¢ Status prÃ¼fen:    pm2 status oder $0 --status"
echo "   â€¢ Logs anzeigen:    pm2 logs redaxo-dashboard"
echo "   â€¢ Neustart:         pm2 restart redaxo-dashboard oder $0 --restart"
echo "   â€¢ Stoppen:          pm2 stop redaxo-dashboard"
echo "   â€¢ Entfernen:        pm2 delete redaxo-dashboard oder $0 --delete"
echo "   â€¢ PM2 deinstall.:   $0 --uninstall"
echo "   â€¢ Startup Setup:    pm2 startup"
echo ""
